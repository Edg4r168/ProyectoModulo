@model Producto

@{
    ViewData["Title"] = "Edit";
}

@section Styles {
    <link href="~/css/editproduct.css" rel="stylesheet" />
}

<h3 class="section-title">Editar producto</h3>

<section class="section-edit">
    <form asp-action="Edit" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" class="form-control" />
        <div class="image-container">
            <img id="preview"
                 src="@Model.UrlImagen"
                 alt="Image Preview" />

            <label for="file-upload" class="image-upload">
                <input type="file" name="imagen" id="file-upload" />
                <svg class="icon-upload"
                     focusable="false"
                     aria-hidden="true"
                     viewBox="0 0 24 24"
                     fill="currentColor">
                    <path d="M19.35 10.04C18.67 6.59 15.64 4 12 4 9.11 4 6.6 5.64 5.35 8.04 2.34 8.36 0 10.91 0 14c0 3.31 2.69 6 6 6h13c2.76 0 5-2.24 5-5 0-2.64-2.05-4.78-4.65-4.96M14 13v4h-4v-4H7l5-5 5 5z"></path>
                </svg>

                <span id="name-image">Selecionar imagen</span>
            </label>
        </div>

        <div class="fields-container">
            <label for="name" title="Nombre del producto">
                <input asp-for="Nombre" type="text" id="name" />
            </label>

            <label for="description" title="Descripción del producto">
                <textarea asp-for="Descripcion" type="text" id="description"></textarea>
            </label>

            <div class="form-group">
                <label for="price" title="Precio del producto">
                    <input asp-for="Precio" type="text" id="price" />
                </label>

                <label for="stock" title="Existencias del producto">
                    <input asp-for="Stock" type="text" id="stock" />
                </label>
            </div>

            <div class="form-group btn-container">
                <button class="button primary">Guardar</button>
                <a asp-action="GetAll" class="button danger">Cancelar</a>
            </div>
        </div>
    </form>
</section>

                


@section Scripts {
    <script src="~/js/imagepreview.js"></script>
}
